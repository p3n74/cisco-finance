model User {
  id              String           @id
  name            String
  email           String
  emailVerified   Boolean          @default(false)
  image           String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  sessions        Session[]
  accounts        Account[]
  accountEntries  AccountEntry[]
  cashflowEntries CashflowEntry[]
  receipts        Receipt[]
  activityLogs    ActivityLog[]
  budgetProjects  BudgetProject[]

  @@unique([email])
  @@map("user")
}

model AuthorizedUser {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String   // VP_FINANCE, AUDITOR, TREASURER, WAYS_AND_MEANS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("authorized_user")
}

// Treasury account transactions (GCash, GoTyme, Cash, BPI)
// These are historical records - money has already moved
model AccountEntry {
  id            String         @id @default(cuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  date          DateTime
  description   String
  account       String         // GCash, GoTyme, Cash, BPI
  amount        Decimal
  currency      String         @default("PHP")
  notes         String?
  isActive      Boolean        @default(true)
  archivedAt    DateTime?
  // Link to cashflow entry when verified
  cashflowEntry CashflowEntry?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([userId])
  @@index([date])
  @@index([account])
  @@index([isActive])
  @@map("account_entry")
}

// Official cashflow transactions (verified from accounts)
model CashflowEntry {
  id                  String              @id @default(cuid())
  userId              String
  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  date                DateTime
  description         String              // Official designation
  category            String
  amount              Decimal
  currency            String              @default("PHP")
  notes               String?
  isActive            Boolean             @default(true)
  archivedAt          DateTime?
  // Reference to the account entry this was verified from
  accountEntryId      String?             @unique
  accountEntry        AccountEntry?       @relation(fields: [accountEntryId], references: [id], onDelete: SetNull)
  receipts            Receipt[]
  receiptSubmissions  ReceiptSubmission[]
  budgetItemExpenses  BudgetItemExpense[]
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  @@index([userId])
  @@index([date])
  @@index([category])
  @@index([isActive])
  @@map("cashflow_entry")
}

model Receipt {
  id              String         @id @default(cuid())
  userId          String
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  cashflowEntryId String?
  cashflowEntry   CashflowEntry? @relation(fields: [cashflowEntryId], references: [id], onDelete: SetNull)
  fileName        String
  fileType        String?
  fileUrl         String?
  storageKey      String?
  uploadedAt      DateTime       @default(now())

  @@index([userId])
  @@index([cashflowEntryId])
  @@map("receipt")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// Activity log for tracking user actions
model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      String   // e.g., "created", "verified", "bound", "unbound", "archived"
  entityType  String   // e.g., "cashflow_entry", "account_entry", "receipt_submission"
  entityId    String?
  description String   // Human-readable description
  metadata    String?  @db.Text // JSON string for additional context
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([entityType])
  @@map("activity_log")
}

// Budget Planning - Projects/Events
model BudgetProject {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  category    String?      // User-typed category
  eventDate   DateTime?    // When the event is planned to happen
  status      String       @default("planned") // "planned" or "completed"
  isActive    Boolean      @default(true)
  archivedAt  DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  items       BudgetItem[]

  @@index([userId])
  @@index([status])
  @@index([isActive])
  @@index([eventDate])
  @@map("budget_project")
}

// Budget Items - Individual expense line items within a project
model BudgetItem {
  id              String              @id @default(cuid())
  budgetProjectId String
  budgetProject   BudgetProject       @relation(fields: [budgetProjectId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  estimatedAmount Decimal
  notes           String?
  isActive        Boolean             @default(true)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  expenses        BudgetItemExpense[]

  @@index([budgetProjectId])
  @@index([isActive])
  @@map("budget_item")
}

// Links budget items to actual cashflow entries (actual spending)
model BudgetItemExpense {
  id              String        @id @default(cuid())
  budgetItemId    String
  budgetItem      BudgetItem    @relation(fields: [budgetItemId], references: [id], onDelete: Restrict)
  cashflowEntryId String
  cashflowEntry   CashflowEntry @relation(fields: [cashflowEntryId], references: [id], onDelete: Restrict)
  createdAt       DateTime      @default(now())

  @@unique([budgetItemId, cashflowEntryId]) // Prevent duplicate links
  @@index([budgetItemId])
  @@index([cashflowEntryId])
  @@map("budget_item_expense")
}

// Public receipt submissions (no authentication required)
model ReceiptSubmission {
  id              String         @id @default(cuid())
  submitterName   String
  purpose         String         // What the receipt is for
  imageData       String         @db.Text // Base64 encoded image
  imageType       String         // MIME type (image/jpeg, image/png, etc.)
  notes           String?
  // Reimbursement fields
  needsReimbursement    Boolean   @default(false)
  reimbursementMethod   String?   // "cash" or "online"
  accountType           String?   // "gcash" or "bank"
  accountNumber         String?   // GCash number or bank account number
  accountName           String?   // Name on the account
  qrCodeData            String?   @db.Text // Base64 encoded QR code image
  qrCodeType            String?   // MIME type for QR code
  contactInfo           String?   // Phone number or email
  contactType           String?   // "phone" or "email"
  // Link to cashflow entry when bound
  cashflowEntryId String?
  cashflowEntry   CashflowEntry? @relation(fields: [cashflowEntryId], references: [id], onDelete: SetNull)
  boundAt         DateTime?
  boundBy         String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([cashflowEntryId])
  @@index([createdAt])
  @@map("receipt_submission")
}